{
   "extends": "@tsconfig/node18/tsconfig.json",
   "compilerOptions": {
      "baseUrl": "./",
      "paths": {
         "@/*": ["src/*"]

      },
      "target": "ES2017",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false
   }
}
